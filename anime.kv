ScreenManager:
    StartScreen:
    ResultsScreen:

<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        TextInput: # Brugeren indtaster en genre i
            id: genre_input
            hint_text: "Indtast animegenre"
            background_color: (0.6,0,0,1)
            foreground_color: (1,1,1,1) #for texten til at forblive hvid sammen med koden for hint_text_color
            hint_text_color: (0.8,0.8,0.8,1) #arbejder sammen med foreground color til at få texten til at forblive hvid
            font_size: 60
            size_hint: (1, 0.2)

        Button:
            text: "Søg"
            background_color: (0.5,0.7,0.9,1)
            color: (1,1,1,1)
            font_size: 60
            size_hint: (1, 0.2)
            on_press: root.search_anime(genre_input.text) # on_press kalder på metoden search_anime i python file, som indholder tekst input

<ResultsScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        ScrollView:
            size_hint: (1, 0.9)

            GridLayout:
                id: grid_layout
                cols: 5
                size_hint_y: None
                row_default_height: 300
                row_force_default: True
                spacing: 10
                padding: 10
                height: self.minimum_height

        Button:
            text: "Tilbage"
            background_color: (0.5,0.7,0.9,1)
            color: (1,1,1,1)
            font_size: 40
            size_hint: (1, 0.1)
            on_press: app.root.current = "start"

<ErrorPopup@Popup>: # Error pop up er defineret her i kivy filen
    title: "Inputfejl"
    size_hint: 0.8, 0.6

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            id: error_message # ID som Python kan kalde på, til at indsætte tekst
            color: (1,0,0,1)
            text: ""

        Button:
            text: "Luk"
            size_hint_y: 0.2
            on_press: root.dismiss()